#include <iostream>
using namespace std;

class BoardMarker {
private:
    string company;
    string color;
    string refillable;
    string inkStatus;

public:
    void setCompany(string c) {
        company = c;
    }

    void setColor(string col) {
        color = col;
    }

    void setRefillable(string r) {
        refillable = r;
    }

    void setInkStatus(string ink) {
        inkStatus = ink;
    }

    void write() {
        if (inkStatus == "empty") {
            cout << "Cannot write. Ink is empty." << endl;
        } else {
            cout << "Writing on the board..." << endl;
        }
    }

    void refill() {
        if (refillable == "yes") {
            inkStatus = "full";
            cout << "Marker refilled successfully." << endl;
        } else {
            cout << "This marker cannot be refilled." << endl;
        }
    }
};

int main() {
    BoardMarker m1, m2, m3;

    m1.setCompany("Dollar");
    m1.setColor("Black");
    m1.setRefillable("yes");
    m1.setInkStatus("empty");

    m2.setCompany("Piano");
    m2.setColor("Red");
    m2.setRefillable("no");
    m2.setInkStatus("full");

    m3.setCompany("Dux");
    m3.setColor("Blue");
    m3.setRefillable("yes");
    m3.setInkStatus("empty");

    m1.write();
    m1.refill();
    m1.write();

    cout << endl;

    m2.write();
    m2.refill();

    cout << endl;

    m3.write();
    m3.refill();
    m3.write();

    return 0;
}
